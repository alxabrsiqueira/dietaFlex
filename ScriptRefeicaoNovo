public class ScriptREFEICAO {

    public static String getCreateTableRefeicao(){


        //SCRIPT UTILIZADO NA OUTRA CLASSE PARA A CRIAÇÃO DO BANCO
        StringBuilder sql = new StringBuilder();

        sql.append("    CREATE TABLE IF NOT EXISTS REFEICAO ( ");
        sql.append("    ID           INTEGER    PRIMARY KEY AUTOINCREMENT NOT NULL, ");
        sql.append("    GRUPO        INTEGER    DEFAULT,    ");
        sql.append("    QUANTIDADE   DOUBLE     DEFAULT,    ");
        sql.append("    LOCALTIME    DATETIME   NOT NULL  ) ");


        return  sql.toString();

    }
}
